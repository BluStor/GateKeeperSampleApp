<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.TransparentActionBar" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/TransparentActionBarStyles</item>
        <item name="actionBarStyle">@style/TransparentActionBarStyles</item>
    </style>

    <style name="TransparentActionBarStyles">
        <item name="android:background">@android:drawable/screen_background_light_transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="logo">@android:color/transparent</item>
        <item name="background">@android:drawable/screen_background_light_transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Widget.ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">?android:attr/colorPrimary</item>
    </style>
</resources>
